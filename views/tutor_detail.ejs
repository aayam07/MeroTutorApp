<%- include("header") -%>

<div class="container emp-profile">
        
    <div class="row">
        <div class="col-md-4">
            <div class="profile-img">
                <img src="/uploads/<%= tutor.tutorPicture %>" alt="profile-pic"/>
            </div>
        </div>
        <div class="col-md-6">
            <div class="profile-head">
                        <h5>
                            <%= tutor.username %>
                        </h5>
                        
                        <p class="proile-rating">RANKINGS : <span>8/10</span></p>
                        <div class="col-md-2">
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star-half-stroke"></i>
                            <span>(4.5/5)</span>
                        </div>
                    
                <ul class="nav nav-tabs" id="myTab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">About</a>
                    </li>
                    
                </ul>
            </div>
        </div>

            
        
        
    </div>
    <div class="row my-2">
    
        <div class="col-md-8">
            <div class="tab-content profile-tab" id="myTabContent">
                <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                            
                    <!-- copy from here -->
                            <div class="row">
                                <div class="col-md-6">
                                    <label>Username</label>
                                </div>
                                <div class="col-md-6">
                                    <p><%= tutor.username %></p>
                                </div>
                            </div>
                    <!-- to here: to add new row -->
                            <div class="row">
                                <div class="col-md-6">
                                    <label>Name</label>
                                </div>
                                <div class="col-md-6">
                                    <p><%= tutor.firstname %></p>
                                </div>
                            </div>
                            <% if (isLoggedIn) { %>
                            <div class="row">
                                <div class="col-md-6">
                                    <label>Email</label>
                                </div>
                                <div class="col-md-6">
                                    <p><%= tutor.email %></p>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <label>Contact No:</label>
                                </div>
                                <div class="col-md-6">
                                    <p><%= tutor.contactNumber %></p>
                                </div>
                            </div>
                            <% } %>

                            <div class="row">
                                <div class="col-md-6">
                                    <label>Experience</label>
                                </div>
                                <div class="col-md-6">
                                    <p><%= tutor.experience %></p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label>Monthly Fees</label>
                                </div>
                                <div class="col-md-6">
                                    <p>Rs. <%= tutor.monthlyFee %></p>
                                </div>
                            </div>
                            
                            <div class="row">
                                <div class="col-md-6">
                                    <label>Availability</label>
                                </div>
                                <div class="col-md-6">
                                    <p><%= tutor.availability %></p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label>About Me</label>
                                </div>
                                <div class="col-md-12">
                                    <p><%= tutor.bio %></p>
                                </div>
                            </div>
                </div>

            </div>
        </div>
    </div>
    
</div>

<%- include("footer") -%>