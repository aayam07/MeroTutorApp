<%- include("header") -%>

<div class="container-fluid whole-container">
    <h1 class="main-header"><%= site.name %> <span><button type="button" class="btn btn-light fav-btn">Favourite <i class = "fa-solid fa-heart"></i></button></span></h1>
    <h4 class="sub-header">
        <i class="fa-solid fa-location-dot" style="color: black;"></i>  <%=site.district %></h4>

    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="/my_uploads/<%= images[0].path.split('/').slice(-1) %>"  class="d-block w-100" alt="...">
            </div>

            <%  images.forEach((img,index) => { %>
                <% if(index !== 0) { %>
                    <div class="carousel-item">
                        <img src="/my_uploads/<%= img.path.split('/').slice(-1) %>"  class="d-block w-100" alt="...">
                    </div>
                <% } %>
            <% }) %>

        </div>
        
        <button class="carousel-control-prev" type="button" data-target="#carouselExampleIndicators"
            data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-target="#carouselExampleIndicators"
            data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </button>
    </div>

    <p class="site-desc">
        <%= site.description %>
    </p>


    <h5 class="accomodate">Nearest Accomodations</h5>

    
    <div class="row">
            <% accomodations.forEach((acc) =>{ %> 
            <div class="col-lg-3">
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title"><%=acc.name%></h5>
                        <h6 class="card-subtitle mb-2 text-muted"><%=acc.location%></h6>
                        <p class="card-text"><ul style="padding: 8%;"> <li>
                            Contact: <%= acc.contactNo %>
                        </li>
                    <li>Homestay: <%= acc.isHomeStay%></li></ul> </p>
                            <a href="<%= acc.website%>" class="card-link" target="_blank">Website</a>
                        </div>
                    </div>
                </div>
                <% })  %>
            </div>
            



    <h5 class="accomodate">Nearby Guides</h5>

    <div class="row">
        <div class="col-lg-3">
        <div class="card" style="width: 18rem;">
            <img class="card-img-top" src="/images/travel_boy.jpg" alt="Card image cap">
            <div class="card-body">
              <h5 class="card-title"><%= user.username %></h5>
              
              <a href="" class="visit-profile-btn"><button type="button" class="btn-sm btn-info">Visit Profile</button></a>
            </div>
        </div>
    </div>
    </div>

</div>

<%- include("footer") -%>